var
  input: string;
  value: Integer;
begin
  input := Edit1.Text;
  if not TryStrToInt(input, value) then
  begin
    ShowMessage('Введите число');
    Exit;
  end;
  pomodoro_form2 := value;

  input := Edit2.Text;
  if not TryStrToInt(input, value) then
  begin
    ShowMessage('Введите число');
    Exit;
  end;
  duration_form2 := value;

  input := Edit3.Text;
  if not TryStrToInt(input, value) then
  begin
    ShowMessage('Введите число');
    Exit;
  end;
  rest_length_form2 := value;

  Close;
end;
